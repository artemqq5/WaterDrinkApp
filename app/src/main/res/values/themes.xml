<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaterState" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/three</item>
        <item name="colorPrimaryVariant">@color/two</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->


        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>


    <style name="SplashScreen">
        <item name="android:drawable">@drawable/splash_screen</item>
    </style>


<!--    Text start-->
    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.SizeBig">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text.SizeMedium">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.SizeSmall">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
<!--    Text end-->




<!--    Button start-->
    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:hint">10</item>
    </style>

    <style name="ButtonContained" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">10</item>
    </style>

    <style name="Button.Light">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:hint">10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:hint">10</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="Button.ButtonRightMaterial">
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
<!--    Button end-->



<!--    Input start-->
    <style name="InputMaterial" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">#00587A</item>
        <item name="hintTextColor">#00415A</item>
    </style>

    <style name="InputMaterialDate" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">#00587A</item>
        <item name="hintTextColor">#00415A</item>
    </style>

    <style name="InputMaterialDateDrop" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">#00587A</item>
        <item name="hintTextColor">#00415A</item>
    </style>

    <style name="EditTextMaterial">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
<!--    Input end-->



<!--   Alert Dialog-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/three</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">#E6000000</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton.DialogButtonNegative</item>
    </style>


    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.DialogButtonNegative" >
       <item name="android:textColor">#66004151</item>
    </style>


    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/status_bar</item>
    </style>


<!--    Alert Dialog end-->



<!--Other components-->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>


    <style name="ActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/status_bar</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">normal</item>
        <item name="srcCompat">@drawable/ic_plus</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_margin">28dp</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Text.miniText">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="Text.miniText_v2">

        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="Text.TextProfile">
        <item name="android:textColor">#A6FFFFFF</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Text.TextProfile.Title">
        <item name="android:textColor">#E6FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>





    <style name="ImageStart">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="bottom_nav" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">25dp</item>
    </style>

    <style name="Theme.WaterState.MyAutofilledHighlight">
        <item name="android:autofilledHighlight" tools:ignore="NewApi">@android:color/transparent</item>
    </style>



</resources>

